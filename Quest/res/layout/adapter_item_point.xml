<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" android:paddingLeft="@dimen/marginPadding"
              android:gravity="center_vertical"
        >

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="[point_name]"
            android:id="@+id/textView_point_name"
            android:layout_marginRight="@dimen/marginPadding"
            android:drawableLeft="@drawable/ic_action_place" android:gravity="center_vertical"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="[point_position]"
            android:id="@+id/textView_point_position"/>
</LinearLayout>